{% extends "base.html.twig" %}

{% block title %}
    Access Token Liste
{% endblock %}

{% block stylesheets %}
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table th, table td {
            border: 1px solid black;
        }

        .text-center {
            text-align: center;
        }

        .button-action {
            float: right;
            margin-bottom: 2rem;
        }

        .btn-default svg {
            padding-top: 4px;
            padding-bottom: 1px;
        }

        .btn-default {
            transition-duration: 0.4s;
            background-color: white;
            color: #000000;
            border: 2px solid #000000;
            border-radius: 12px;
        }

        .btn-default:hover {
            border-radius: 12px;
            background-color: #000000;
            color: white;
        }

        .button-row-action {
            margin-top: 8px;
            margin-bottom: 8px;
            display: flex;
            justify-content: center;
            gap: 8px;
        }

        tbody tr:hover {
            background-color: #cccccc;
        }

        thead tr {
            background-color: #ffffff;
            color: #000000;
        }

        thead tr th{
            padding: 8px;
        }
        thead tr:hover{
            background-color: #000000;
            color: #ffffff;
        }
        .color-black:disabled {
            color: black;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="button-action">
        <a href="{{ path('access_token_create') }}">
            <button class="btn btn-default">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                     class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z"/>
                </svg>
            </button>
        </a>
    </div>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Token</th>
            <th>GÃ¼ltigkeit</th>
            <th>action</th>
        </tr>
        </thead>
        <tbody>
        {% if accessTokens|length > 0 %}
            {% for accessToken in accessTokens %}
                <tr class="text-center">
                    <td>
                        {{ accessToken.name }}
                    </td>
                    <td>
                        {{ accessToken.token }}
                    </td>
                    <td>
                        {% if accessToken.valid %}
                            Ja
                        {% else %}
                            Nein
                        {% endif %}
                    </td>
                    <td>
